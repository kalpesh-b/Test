<!--script id="farmElements"-->
<%- contentFor('field')%>
<div class="linegrey2"></div>
<div class="form-group">
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-2">
					<input type="text" class="form-control" placeholder="Survey Number" name="fields[1][survey_number]" id="survey_number" value=""/>
				</div>

				<div class="col-md-2">
					<input type="number" class="form-control" placeholder="Farming Type" name="fields[1][farming_type]" id="farm_type" onkeyup="this.value=this.value.replace(/[^\d]/,'')">
				</div>
				<div class="col-md-2">
					<input type="number" class="form-control" placeholder="Total Land Holding" name="fields[1][total_area]" id="total_land" onkeyup="this.value=this.value.replace(/[^\d]/,'')">
				</div>
				<div class="col-md-3">
					<input type="number" class="form-control" placeholder="Area to be proposed under GCP" name="fields[1][area_proposed_GCP]" id="area_proposed_GCP" onkeyup="this.value=this.value.replace(/[^\d]/,'')">
				</div>
			</div>
		</div>

	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-sm-2">
					<input class="form-control" type="number" placeholder="Latitude" name="fields[1][latitude]" id="latitude">
				</div>
				<div class="col-sm-2">
					<input class="form-control" type="number" placeholder="Longitude" name="fields[1][longitude]" id="longitude">
				</div>
				<div class="col-sm-4 date_field2"><i><img src="/images/icon-calender.png" alt="" style="margin-top: -40px;"></i>
					<input class="form-control datepicker" placeholder="Last Date of Chemical Applicaion" type="text" name="fields[1][chemical_application_date]" id="chemical_application_date">
				</div>
			</div>
		</div>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-xs-4">
					<label>Crops To Be Cultivated Under Organic Practices</label>
					<select name=fields[1][crops][0][crop_id] multiple="multiple" class="form-control">
						<% for (var i = 0; i < ttdata.crops.length; i++) { %>
							<option value=<%= ttdata.crops[i].crop_id %>> <%= ttdata.crops[i].crop_name %></option>
							<% } %>
						</select>

					</div>
					<div class="col-xs-3">

						<label>Soil Nutrition Methods</label>
						<select name=fields[1][snm_id] multiple="multiple" class="form-control" id="snm_id">
							<% for (var i = 0; i < ttdata.snms.length; i++) { %>
								<option value=<%= ttdata.snms[i].snm_id %>> <%= ttdata.snms[i].method_name %></option>
								<% } %>
							</select>

						</div>
						<div class="col-xs-3">

							<label>Plant protection Methods</label>
							<select name=fields[1][ppm_id] multiple="multiple" class="form-control" id="ppm_id">
								<% for (var i = 0; i < ttdata.ppms.length; i++) { %>
									<option value=<%= ttdata.ppms[i].ppm_id %> > <%= ttdata.ppms[i].method_name %></option>
									<% } %>
								</select>

							</div>
						</div>

					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-12">
						<div class="row">
							<div class="col-xs-10">

								<textarea class="form-control" rows="4" name="fields[1][reason_for_change]" placeholder="Reason Why Farmer Wants To Convert To Organic Farming"></textarea>
							</div>
							<div class="col-xs-2">

								<button type="submit" class="btn green" onclick="addBlock('farmBlock')">Add More Field</button>
							</div>
						</div>

					</div>

				</div>
			</div>
		</div>
