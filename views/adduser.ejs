<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
	<title>TT add user</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<style>
	body 		{ padding-top:80px; }
	</style>
</head>
<body>
	<div class="container">

		<div class="col-sm-6 col-sm-offset-3">

			<h1><span class="fa fa-sign-in"></span> add new user</h1>
			roles:<%= ttdata.roles.length %>
			<!-- <% console.log('roles list ttdada', JSON.stringify(ttdata)) %> -->
			<!-- <% console.log('roles list ttdata') %> -->

			<!-- show any messages that come back with authentication -->
			<% if (message.length > 0) { %>
				<div class="alert alert-danger"><%= message %></div>
				<% } %>

				<!-- LOGIN FORM -->
				<form  action="" enctype='multipart/form-data' method="post">
					<div class="form-group">
						<label>role</label>
						<input type="number" class="form-control" name="role_id">
					</div>
					<div class="form-group">
						<label>email</label>
						<input type="text" class="form-control" name="email">
					</div>
					<div class="form-group">
						<label>fname</label>
						<input type="text" class="form-control" name="first_name">
					</div>
					<div class="form-group" >
						<label>profile picture </label>
						<!-- webkitdirectory -->
						<input type="file"   multiple name="picture">
					</div>
					<div class="form-group">
						<label>mname</label>
						<input type="text" class="form-control" name="middle_name">
					</div>
					<div class="form-group">
						<label>lname</label>
						<input type="text" class="form-control" name="last_name">
					</div>
					<button type="submit" class="btn btn-primary btn-lg">adduser</button>
				</form>

				<hr>


			</div>

		</div>

	</body>
	</html>
